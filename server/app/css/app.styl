// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  text-align center
  background url(/images/logo.png) no-repeat

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#content
  padding 50px


// Quick Chat Demo - Delete below this line!

#content
  p#message
    color #AAA
    font-size 10px
#demo
  display none
  text-align left
  vertical-gradient #ddd, #eee
  border 1px solid #ccc
  margin 40px auto
  margin-left 300px
  padding 15px
  round 10px
  h5
    color #666
    font-size 0.8em
    padding 5px 0
  #myMessage, #chatlog
    border none
    box-shadow inset 0 0 2px #777
    round 5px
  #myMessage
    width 500px
    padding 5px
    margin 0
  #chatlog
    margin-top 5px
    width 100%
    background-color white
    p, pre
      font-size 0.9em
      color #000a68
      padding 3px 9px
      margin 0
      font-family courier
    :first-child
      padding-top 9px
    :last-child
      padding-bottom 9px
    .command
      background-color #888
    .stderr
      color red
